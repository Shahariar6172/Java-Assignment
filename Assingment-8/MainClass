class SumClass {
    public static double sumSeries() {
    double i = 1.0, sum = 0.0;
      do {
        sum += i;
        i -= 0.1;
        }
while (i >= 0.1);
        return sum;
    }
}

class DivisorMultipleClass {
    public static int gcd(int a, int b) {
        int temp;
        do {
            temp = a % b;
            a = b;
            b = temp;
        } while (b != 0);
        return a;
    }
    public static int lcm(int a, int b) {
        return (a * b) / gcd(a, b);
    }
}

class NumberConversionClass {
    public static void convertAll(int decimal) {
        System.out.println("Decimal: " + decimal);
        System.out.println("Binary: " + Integer.toBinaryString(decimal));
        System.out.println("Octal: " + Integer.toOctalString(decimal));
        System.out.println("Hexadecimal: " + Integer.toHexString(decimal).toUpperCase());
    }
}

class CustomPrintClass {
    public static CustomPrintClass a = new CustomPrintClass();
    public void pr(String msg) {
        System.out.println(msg);
    }
}

public class MainClass {
    public static void main(String[] args) {
        CustomPrintClass.a.pr("---- Java Control Statements: do-while loop ----");
        double sum = SumClass.sumSeries();
        CustomPrintClass.a.pr("Sum of series (1 + 0.9 + ... + 0.1) = " + sum);
        int x = 12, y = 18;
        CustomPrintClass.a.pr("GCD of " + x + " and " + y + " = " + DivisorMultipleClass.gcd(x, y));
        CustomPrintClass.a.pr("LCM of " + x + " and " + y + " = " + DivisorMultipleClass.lcm(x, y));
        int n = 25;
        CustomPrintClass.a.pr("\nNumber conversions for " + n + ":");
        NumberConversionClass.convertAll(n);
        CustomPrintClass.a.pr("\n---- End of Program ----");
    }
}
